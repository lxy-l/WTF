@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityUser>
@{
    ViewData["Title"] = "Account";
}
<h1>@ViewData["Title"]</h1>
<hr />
<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="table-responsive">
    <table class="table table-hover">
        @*    <caption>List of users</caption>*@
        <thead class="table-light">
            <tr>
                <th>
                    #
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TwoFactorEnabled)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.LockoutEnabled)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.LockoutEnd)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AccessFailedCount)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{
                int index = 1;
            }
            @foreach (var item in Model)
            {

                <tr scope="row">
                    <th scope="row"> @index </th>
                    <td>
                        @Html.DisplayFor(model => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.Email)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(model => item.TwoFactorEnabled)
                    </td>

                    <td class="text-center">
                        @Html.DisplayFor(model => item.LockoutEnabled)
                    </td>
                    <td class="text-center">
                        @if (item.LockoutEnd.HasValue)
                        {
                            @Html.Raw(item.LockoutEnd.Value.LocalDateTime)
                            ;
                        }
                        else
                        {
                            @Html.Raw("/")
                            ;
                        }

                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(model => item.AccessFailedCount)
                    </td>

                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a>|
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>

                index++;
            }
        </tbody>
    </table>
</div>